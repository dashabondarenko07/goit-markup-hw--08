:root {
  --principal-font: 'Roboto', sans-serif;
  --secondary-font: 'Raleway', sans-serif;
  --white-color: #ffffff;
  --blue-color: #2196f3;
  --black-color: #000000;
  --black-red-color: #212121;
  --gray-color: #757575;
  --black-blue-background-color: #2f303a;
  --light-gray-background-color: #f5f4fa;
  --color-border-portfolio: #eeeeee;
  --color-border-header: #ececec;
  --transition-times: 250ms;
  --cubic-bezier: cubic-bezier(0.4, 0, 0.2, 1);
}
/* svg[width][height]>use[htef] */
h1,
h2,
h3,
h4,
h5,
h6,
body,
ul,
input,
p {
  margin: 0;
  padding: 0;
}
a {
  text-decoration: none;
}
ul {
  list-style: none;
}
img {
  display: block;
  max-width: 100%;
  height: auto;
}
body {
  font-family: var(--principal-font);
  background-color: var(--white-color);
}
.container {
  margin-left: auto;
  margin-right: auto;
  padding: 0 15px;
  width: 1200px;
}
.section {
  padding: 94px 0;
}
.div-row {
  display: flex;
  align-items: center;
}
.btn-cursor {
  cursor: pointer;
}
.visually-hidden {
  position: absolute;
  clip: rect(0 0 0 0);
  width: 1px;
  height: 1px;
  margin: -1px;
}
/* построение сетки
.ul > .li {
